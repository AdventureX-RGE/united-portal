{
  "compilerOptions": {
    // Modern JS output with native async/await, top-level await, etc.
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // recommended for Bun/modern tools

    // Enable support for ESM & modern libraries like Promises, etc.
    "lib": ["ESNext", "DOM"],

    // Strict type-checking
    "strict": true,

    // Allow clean interop with CommonJS modules like `picocolors`
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Good for CLI tools
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Output settings (optional if using Bun only for runtime)
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}